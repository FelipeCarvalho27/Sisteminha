@{
    ViewBag.Title = "Home Page";
}
<script type="text/javascript">
    function valida() {
        alert("Login efetuado com sucesso");
    }
</script>
<div style="text-align: center">
    <h1> Tela de Login</h1>
</div>

<form action="@Url.Action("Index")" method="POST">
        <div class="row">
            <div class="col-6">
                <div class="form-group" style="padding-top:25px;">
                    <label>Email:</label> <br> <input type="text" class="form-control" id="txtemail" name="email" placeholder="exemplo@mail.com.br">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group" style="padding-top:25px;">
                    <label>Senha:</label> <br> <input type="password" class="form-control" id="txtsenha" name="Senha" placeholder="digite sua senha aqui...">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6" style="padding-top:25px;">
                <div class="form-group">
                    <button onclick="valida();" type="submit" class="form-control">Entrar </button>
                </div>
            </div>
        </div>
        <div class="row" style="padding-top:25px;">
            <div class="col-6">
                <div class="form-group">
                    <a href="@Url.Action("Cadastrousers")">Não é cadastrado? Cadastre-se aqui!</a>
                </div>
            </div>
        </div>
</form>


